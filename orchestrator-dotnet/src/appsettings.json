{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.Seq" ],
    "MinimumLevel": "Information",
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://localhost:5341"
        }
      }
    ],
    "Enrich": [ "FromLogContext" ]
  },
  "Trading": {
    "Risk": {
      "PerTradePct": 0.0035,
      "DailyStopPct": 0.02,
      "WeeklyStopPct": 0.04,
      "MaxPositions": 3
    },
    "SlippageModel": {
      "Fraction": 0.25
    },
    "RejectRatePct": 0.5
  },
  "Providers": {
    "FreeModeConfigPath": "../../configs/free_mode.yaml",
    "AlphaVantageLimiterStatePath": "../../state/alphavantage_limiter.json",
    "AlphaVantageDefaultQuota": 25
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:4301"
    ],
    "AllowCredentials": false
  },
  "Database": {
    "ConnectionString": "",
    "CommandTimeoutSeconds": 30,
    "Mode": "FREE"
  }
}
